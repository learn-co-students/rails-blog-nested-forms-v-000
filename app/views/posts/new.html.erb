<h1>New post</h1>

<%= form_for @post do |f| %>
  <div class="field">
  <%= f.label :name %>
  <%= f.text_field :name %>
  
  <br><br>

  
  <%= f.label :content %>
  <%= f.text_area :content %>
  </div>
  <br><br>

  <%= f.label "Choose an already existing tag" %>
  <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %>
  <br>

  <%= f.label "Or Create a New Tag" %>
  <div class="field"><%= f.fields_for :tags do |tag_builder| %>
    <%= tag_builder.label :name %>
    <%= tag_builder.text_field :name %>
  <% end %></div>

  <%= f.submit %>
<% end %>

<%= link_to 'Back', posts_path %>

  
