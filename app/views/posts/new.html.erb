<h1>New post</h1>

<%= form_for(@post) do |f| %>

      <div class="field">
        <%= f.label :name %><br>
        <%= f.text_field :name %><br>
        <%= f.label :content %><br>
        <%= f.text_area :content %><br>
    
      </div>


      <div class="field">
          <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %><br>
          
          <%= f.fields_for :tags, @post.tags.build do |tags_fields| %>
             <%= tags_fields.label :name %>
             <%= tags_fields.text_field :name %>
          <% end %>
    
      </div>
      
      
      <div class="actions">
          <%= f.submit %>
      </div>


<% end %>
