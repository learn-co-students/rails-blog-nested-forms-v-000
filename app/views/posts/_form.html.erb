<%= form_for(@post) do |f| %>
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

      <ul>
      <% @post.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>
    <%= f.label :content %><br>
    <%= f.text_area :content %><br>
    Tags:
  </div>

  <div class="field">
    <%= f.collection_check_boxes :tag_ids, Tag.all, :id, :name %><br>
  </div>

  <div class="field">
    <%= f.fields_for :tags do |tag_builder| %>
      <%= tag_builder.label :name %>
      <%= tag_builder.text_field :name %>
    <% end %>
    <!-- <input type="text" id="post_tag_attributes_0_name" name="post[tags_attributes][0][name]" />
    <input type="text" id="post_tag_attributes_1_name" name="post[tags_attributes][1][name]" /> -->
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
