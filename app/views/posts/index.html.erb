<h1>Listing posts</h1>

    <% @posts.each do |post| %>
        <h2><%= link_to post.name, post %></h2>
        <p><%= link_to 'Edit', edit_post_path(post) %> | <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></p><br>
    <% end %>


